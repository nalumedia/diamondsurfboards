<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :contact_name, class: "form-control", :placeholder => "Your Name" %>
  </div>
  <div class="form group">
    <%= f.text_field :contact_email, class: "form-control", :placeholder => "Your Email" %>
  </div>
  <br />
  <div class="form-group">
    <%= f.text_field :contact_phone, class: "form-control", :placeholder => "Your Phone" %>
  </div>
  <div class="form-group">
    <%= f.text_area :contact_help, class: "form-control", :placeholder => "How can we help?" %>
  </div>
 
  <% if user_signed_in? %>
   <div class="form-group">
    <%= f.label :contact_notes %><br>
    <%= f.text_area :contact_notes, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :contact_status %><br>
   <%= f.select "contact_status", ['New', 'Needs Something', 'Contacted'] %>
  </div>
   <% end %>
  <div class="actions">
    <%= f.submit "Contact Diamond", class: "btn btn-default" %>
  </div>
<% end %>
