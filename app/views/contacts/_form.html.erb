<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :contact_name %><br>
    <%= f.text_field :contact_name %>
  </div>
  <div class="field">
    <%= f.label :contact_email %><br>
    <%= f.text_field :contact_email %>
  </div>
  <div class="field">
    <%= f.label :contact_phone %><br>
    <%= f.text_field :contact_phone %>
  </div>
  <div class="field">
    <%= f.label :contact_help %><br>
    <%= f.text_area :contact_help %>
  </div>
 
  <% if user_signed_in? %>
   <div class="field">
    <%= f.label :contact_notes %><br>
    <%= f.text_area :contact_notes %>
  </div>
  <div class="field">
    <%= f.label :contact_status %><br>
   <%= f.select "contact_status", ['Active', 'On Hold', 'Archived', 'Invoice Sent'] %>
  </div>
   <% end %>
  <div class="actions">
    <%= f.submit "Contact Diamond", class: "btn btn-default" %>
  </div>
<% end %>
