<p id="notice"><%= notice %></p>

<div class="row">
        <div class="col-md-5">
          <center>
                  <h1><%= @board.board_name %></h1>
                  <% if @board.image.present? %>
                  <%= image_tag @board.image.url(:medium), class: "img-responsive" %>
                  <% end %>
        </div><!-- end md 4 -->
        <div class="col-md-7">
                    <br />
                    <center>
                        <% if @board.logo.present? %>
                        <%= image_tag @board.logo.url(:medium), class: "img-responsive" %>
                    <% end %>
                    </center><br />
                    <p><%= @board.board_description %></p>
                    <center> 
                       <% if @board.waveheightlogo.present? %>
                       <%= image_tag @board.waveheightlogo.url(:medium), class: "img-responsive" %>
                     <% end %>
                     </center><br />
                           <center>
                            <% if @board.rockerlogo.present? %>
                            <%= image_tag @board.rockerlogo.url(:medium), class: "img-responsive" %>
                            <% end %>
                            </center><br />
                                  <center>
                                     <% if @board.skilllogo.present? %>
                                    <%= image_tag @board.skilllogo.url(:medium), class: "img-responsive" %>
                                  <% end %>
                                  </center><br />
          </center>
                    </div><!-- end md 4 -->
            </div><!-- end row -->

<div class="row">
      <div class="col-md-4">
            <table class="table table-condensed">
                      <thead>
                        <tr>
                          <th>Length</th>
                          <th>Width</th>
                          <th>Thickness</th>
                          <th>Volume</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @board.dimensions.each do |dimension| %>
                          <tr>
                            <td><%= dimension.length %></td>
                            <td><%= dimension.width %>"</td>
                            <td><%= dimension.thickness %>"</td>
                            <td><%= dimension.volume %>L</td>
                            <td><%= link_to 'Edit', edit_dimension_path(dimension) %> &nbsp
                            <%= link_to 'Delete', dimension, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
      </div><!-- end md 4 -->
      <div class="col-md-4"></div><!-- end md 4 -->
      <div class="col-md-4"></div><!-- end md 4 -->
</div><!-- end row -->


